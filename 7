    if ((a1 * b2 - b1 * a2) == 0) //главный определитель = 0
    {
        if (c1 / c2 == a1 / a2)
        {
            cout << "belongs R" << endl; 
        }
        else
        {
            cout << "belongs to empty set" << endl;
        }
    }
    else
    {
        cout << "x = " << -(b1 * c2 - c1 * b2) / (a1 * b2 - b1 * a2) << ", y = " << (a1 * c2 - c1 * a2) / (a1 * b2 - b1 * a2) << endl;
    }
