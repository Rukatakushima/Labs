{
    double x, a, y;
    cout << "write x (kg), a (the cost of x kg), y (kg;  plus 1 kg which you want to know the cost" << endl;
    cin >> x >> a >> y;

    cout <<  a * y / x << " is the cost of y kg; " <<  a / x << " is the cost of 1 kg" << endl;
    return 0;
}
*/

//7.4 Скорость первого автомобиля V1 км/ч, второго — V2 км/ч, расстояние между ними S км. Определить расстояние между ними через T часов, если автомобили удаляются друг от друга.
/*
#include <iostream>

using namespace std;
int main()
{
    double v1, v2, s, t;
    cout << "write speed of the 1st car, of the 2nd one, the distance between them, the time of their movements from each other" << endl;
    cin >> v1 >> v2 >> s >> t;
    if (v1 < 0 || v2 < 0 || t < 0) {
        cout << "the speed or the time is not real" << endl;
        return 0;
    }
    cout << s + t * (v1 + v2) << " is distance between them after t time" << endl;
    return 0;
}
*/

