/*
// Номер 5.4
#include <iostream>
#include <math.h>

int main()
{
    //объявляем переменные и создаем переменные для вывода ответов
    int x1, y1, x2, y2;
    std::cout << "Write coordinates x1, y1, x2, y2" "\n";
    std::cin >> x1 >> y1>> x2 >> y2;
     double S, P;
      S = abs(x2 - x1) * abs(y2 - y1);
      P = 2 * (abs(x2 - x1) + abs(y2 - y1));
    std::cout << "P=" <<  P << "\n" << "S=" <<  S << "\n";  //выводим на экран результаты. 
return 0;
