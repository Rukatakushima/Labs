/*
// Номер 5.2
#include <iostream>
#include <math.h>

int main()
{
    //объявляем переменные и создаем переменные для вывода ответов
    double A, B, C;
    std::cout << "Write coordinates points A, B, C on the one line" "\n";
    std::cin >> A >> B >> C;
    double AC, BC, Sum;
    AC = abs(A-C); // находим длинны отрезков AC и BС, а так же их сумму и задаём их значения в аналогичные переменные
    BC = abs(B-C);
    Sum = AC+BC;
    std::cout << "AC=" << AC << "\n"  << "BC=" << BC << "\n" << "Sum=" << Sum << "\n" ;
    //выводим на экран результаты. Они верны. Программа работает правильно.
    return 0;
}
*/
