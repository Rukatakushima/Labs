/*
// Номер 5.5
#include<iostream>
#include<cmath>
#include <math.h>
int main()
{
    int  x1, x2, x3, y1, y2, y3;
    std::cout << "Write the coordinates of the points (x1, y1), (x2, y2), (x3, y3) of triangle"  "\n";
    std::cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
    double  a, b, c, p, S;
    if (((x1 == x2) and (x2 == x3)) or ((y1 == y2) and (y2 == y3)))          //если точки стоят в одну линию, то это не треугольник
    {
        std::cout << "not a triangle";
    }
    else
    {
    a = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
    b = sqrt(pow((x3 - x2), 2) + pow((y3 - y2), 2));
    c = sqrt(pow((x3 - x1), 2) + pow((y3 - y1), 2));
    p = (a + b + c) / 2;        //полупериметр
    S = sqrt(p * (p - a) * (p - b) * (p - c)); //вычисление площади треугольника через формулу герона;
    std::cout << "P=" << p * 2 << "\n" << "S=" << S << "\n";  //вывод ответов       
    }
    return 0;
*/
