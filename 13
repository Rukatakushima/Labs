/*
//13.5 Дано вещественное число A и целое число N (> 0). Используя один цикл, найти значение выражения 1 − A + A2 − A3 + . ..± AN .
int main()
{
	int N, i;
	float  A;
	float x = 1;
	float y = 1;
	cout << "Write integer N (>0) and real number A ";
	cin >> N >> A;
	if (N < 0) {
		cout << "integer N < 0";
		return 0;
	}
	for (i = 1; i <= N; i++) {
		x += y;
		y = -y * A;
	}
	cout << "The value of the expression 1 - A + A2 - A3 + ... -+ AN = " << y << endl;
}
