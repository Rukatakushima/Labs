/*
//13.2 Дано целое число N (> 0). Найти произведение 1.1 · 1.2 · 1.3 · . . . (N сомножителей).

int main()

{
	int N,i;
	double p = 1;
	double a = 1.1;
	cout << "Write integer N (>0) ";
	cin >> N;
	if (N < 0) {
		cout << "integer N < 0";
		return 0;
	}
	for ( i = 1; i <= N; i++) {
		p *= a;
		a += 0.1;
	}
	cout << "The product of numbers = " << p << endl;
	return 0;
}
