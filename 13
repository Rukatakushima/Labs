/*
//13.3 Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы
int main()

{
	int N, i;
	double x = 0;
	cout << "Write integer N (>0) ";
	cin >> N;
	if (N < 0) {
		cout << "integer N < 0";
		return 0;
	}
	for (i = 1; i <= N; i++) {
		x += (2 * i - 1);
		cout << "The square of the number " << i << " = "  << x << endl;
	}
}
*/

/*
//13.4 Дано вещественное число A и целое число N (> 0). Используя один цикл, найти сумму 1 + A + A2 + A3 + . . . + AN
int main()
{
int N, i;
double A;
double x = 1;
cout << "Write integer N (>0) and real number A ";
cin >> N >> A;
if (N < 0) {
	cout << "integer N < 0";
	return 0;
}
for (i = 1; i <= N; i++) {
	x += A*i;
}
cout << "The amount (1 + A + A2 + A3 + . . . + AN) = " << x << endl;
}
