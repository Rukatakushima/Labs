{
    int  x;
    cout << "x" << endl; //даём значение x
    cin >> x;
    double y;
    y = 4 * pow(x-3, 6) - 7 * pow(x-3, 3) +2; // считаем функцию y
    cout << "y=" << y << endl;;  //вывод ответа      
    return 0;
}
*/

//6.6 Дано число A. Вычислить A8 , используя вспомогательную переменную и три операции умножения.
/*
#include<iostream>
using namespace std;
int main()
{
    int  A;
    cout << "A" << endl; //даём значение A
    cin >> A;
    double y;
    y = pow(A,2);//вводим впомогательную переменную;
    A = y * y;
    A = y * A; // три операции умножения
    A = y * A;
    cout << "A^8=" << A << endl;;  //вывод ответа      
    return 0;
}
*/

//6.7 Дано число A. Вычислить A15, используя две вспомогательные переменные и пять операций умножения
/*
#include<iostream>
using namespace std;
int main()
{
    int  A;
    cout << "A" << endl; //даём значение A
    cin >> A;
    double y, x;
    y = pow(A,2);//вводим впомогательные переменные;
    x = pow(A,3);
    A = y * x;
    A = y * A; // пять операции умножения
    A = x * A;
    A = x * A;
    A = y * A;
    cout << "A^15=" << A << endl;;  //вывод ответа      
    return 0;
}
*/
