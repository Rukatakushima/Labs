// 6.1. Поменять местами содержимое переменных A и B и вывести новые значения A и B.
/*
#include<iostream>
using namespace std;
int main()
{
    int  A, B, C;
    cout << "A and B" << endl;
    cin >> A >> B;
    C = A;// в вспомогательную  переменную С "сохраняем" значение А
    A = B; // теперь значение В присваиваем  А, а значение А, которое хранится в С, в В
    B = C;
