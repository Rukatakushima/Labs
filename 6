// 6.2. Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C.
/*
#include<iostream>
using namespace std;
int main()
{
    int  A, B, C, D;
    cout << "A and B and C" << endl;
    cin >> A >> B >> C;
    D = B;// в вспомогательную  переменную D "сохраняем" значение А
    B = A; // теперь значение A присваиваем переменной B, а значение
    A = C; //значение C присваиваем переменной A, а значение B, которое храниться в переменной D, в С
    C = D;
    cout << "A=" << A << "\n"  <<  "B=" << B << "\n" << "C=" << C << endl;;  //вывод ответов       
    
    return 0;
}

//6.3 Даны переменные A, B, C. Изменить их значения, переместив содержимое A в C, C — в B, B — в A, и вывести новые значения переменных A, B, C.
*/

/*
#include<iostream>
using namespace std;
int main()
{
    int  A, B, C, D;
    cout << "A and B and C" << endl;
    cin >> A >> B >> C;
    D = C;// в вспомогательную  переменную D "сохраняем" значение А
    C = A; // теперь значение A присваиваем переменной C
    A = B; //значение B присваиваем переменной A, а значение C, которое храниться в переменной D, в B
    B = D;
    cout << "A=" << A << "\n"  <<  "B=" << B << "\n" << "C=" << C << endl;;  //вывод ответов       
    
    return 0;
}
*/

// 6.4 Найти значение функции y = 3x6 − 6x2 − 7 при данном значении x

/*
#include<iostream>
using namespace std;
int main()
{
    int  x;
    cout << "x" << endl; //даём значение x
    cin >> x;
    double y;
    y = 3 * pow(x, 6) - 6 * pow(x, 2) - 7; // считаем функцию y
    cout << "y=" << y << endl;;  //вывод ответа      
    return 0;
}
*/

//6.5 Найти значение функции y = 4(x−3)6 − 7(x−3)3 + 2 при данном значении x
/*
